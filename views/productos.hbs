<h1>Vista de productos</h1>

{{#if products}}
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Miniatura</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td scope="row">{{this.nombre}}</th>
                <td>{{this.precio}}</td>
                <td><img src={{this.thumbnail}} alt={{this.nombre}} style="width:50px; height:50px; object-fill:cover" /> </td>
            </tr>
            {{/each}}
        
        </tbody>

    </table>

  </div>

  {{else}}
    <div class="alert alert-warning" role="alert">
        No hay productos disponibles.
    </div>
  
  {{/if}}

<div style="width: 100%;" class="d-flex justify-content-center mt-5">
    <a class="btn btn-primary" role="button" href="/">Agreagar Productos</a>
</div>