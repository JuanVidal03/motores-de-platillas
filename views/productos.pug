html 
    head 
        title="Productos"
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    body 
        main(class="container pt-5")
            div(class="row")
                div(class="col")
                    h1="Product list"
                    if productos.length>0 
                        div(class="table-responsive")
                            table(class="table table-striped align-middle")
                                thead 
                                    tr 
                                        th(scope="col")="Name"
                                        th(scope="col")="Price"
                                        th(scope="col")="Picture"
                                tbody 
                                    each product in productos 
                                        tr 
                                            td(scope="row")=product.nombre
                                            td=product.precio
                                            td
                                                img(src=product.thumbnail, alt=product.nombre, style="width:50px; height:50px; object-fill:cover")
                                            

                    else 
                        div(class="alert alert-warning", role="alert")="Products don't exist"
            div( style="width: 100%;", class="d-flex justify-content-center mt-5")
                a( class="btn btn-primary", role="button", href="/" ) Agreagar Productos