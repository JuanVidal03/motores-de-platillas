html 
    head 
        title="Añadir productos"
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    body 
        main(class="container pt-5")
            div(class="row")
                div(class="col")
                    h1="Add a new product"
                    form(action="/productos", method="post")
                        div(class="mb-3")
                            input(type="text", name="nombre", class="form-control", placeholder="Nombre", required)
                        div(class="mb-3")
                            input(type="number", name="precio", class="form-control", placeholder="Precio", required)
                        div(class="mb-3")
                            input(type="url", name="thumbnail", placeholder="URL de la miiatura", class="form-control", required)
                        div(class="mb-3")
                            input(type="submit", value="Añadir producto", class="btn btn-primary")
            div( style="width: 100%;", class="d-flex justify-content-center mt-5")
                a( class="btn btn-primary", role="button", href="/productos" ) Ver Productos
